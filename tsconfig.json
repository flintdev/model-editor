{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "src": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.*"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}